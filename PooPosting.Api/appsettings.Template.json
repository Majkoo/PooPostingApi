{
  "ConnectionStrings": {
    "DefaultConnection": "${DB_CONNECTION_STRING}"
  },
  "LogLevel": {
    "Default": "Warning",
    "Microsoft": "Info",
    "Microsoft.Hosting.Lifetime": "Trace"
  },
  "Debug": {
    "LogLevel": {
      "Default": "Debug"
    }
  },
  "HashIdsSettings": {
    "MinHashLength": 8,
    "HashAlphabet": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890-_",
    "PictureSalt": "${APP_SECRET_GENERATED_1}",
    "AccountSalt": "${APP_SECRET_GENERATED_2}",
    "CommentSalt": "${APP_SECRET_GENERATED_3}"
  },
  "Authentication": {
    "JwtKey": "${APP_SECRET_GENERATED_4}",
    "JwtExpireDays": 1,
    "RefreshTokenExpireDays": 14,
    "JwtIssuer": "PooPosting"
  },
  "FirebaseConfig": {
    "AuthSecret": "${FirebaseSecret}",
    "BasePath": 1
  }
}