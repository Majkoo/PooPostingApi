{
  "ConnectionStrings": {
    "DefaultConnection": "${DB_CONNECTION_STRING}"
  },
  "LogLevel": {
    "Default": "Warning",
    "Microsoft": "Info",
    "Microsoft.Hosting.Lifetime": "Trace"
  },
  "Debug": {
    "LogLevel": {
      "Default": "Debug"
    }
  },
  "HashIdsSettings": {
    "MinHashLength": 8,
    "HashAlphabet": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890-_",
    "PictureSalt": "${AUTOGENERATE_1}",
    "AccountSalt": "${AUTOGENERATE_2}",
    "CommentSalt": "${AUTOGENERATE_3}"
  },
  "Authentication": {
    "JwtKey": "${AUTOGENERATE_3}",
    "JwtExpireDays": 1,
    "RefreshTokenExpireDays": 14,
    "JwtIssuer": "PooPosting"
  }
}